---
const links = [
  { href: "/", label: "Home" },
  { href: "/portfolio", label: "Portfolio" },
  { href: "/prints", label: "Prints" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" },
];
---

<header class="container">
  <div
    style="display:flex; flex-wrap:wrap; align-items:baseline; justify-content:space-between; gap:10px;"
  >
    <div>
      <div style="font-size: 1.05rem; font-weight: 700;">
        Visit Fresno Photography
      </div>
      <div class="small">Wildlife &amp; human-powered adventure</div>
    </div>

    <nav class="small" style="white-space: nowrap;">
      {
        links.map((l, i) => (
          <>
            <a href={l.href}>{l.label}</a>
            {i < links.length - 1 ? <span> | </span> : null}
          </>
        ))
      }
    </nav>
  </div>

  <hr class="hr" />
</header>
